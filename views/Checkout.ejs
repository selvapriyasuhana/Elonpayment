        // Function to send payment ID and order ID to the server to capture the payment
        async function capturePayment(paymentId, orderId) {
            try {
                const response = await fetch('/api/capture-payment', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
